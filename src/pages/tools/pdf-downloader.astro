---
import ToolTemplate from '../../layouts/ToolTemplate.astro';

const platform = "PDF";
const description = "Download PDFs from any website instantly. Extract and save PDF documents with one click.";

const features = [
  "Download PDFs from any website or URL",
  "Preserve original PDF quality and formatting",
  "No file size limitations",
  "Works with password-protected PDFs (if publicly accessible)",
  "Batch download multiple PDFs",
  "Mobile and desktop compatible",
  "No registration or software required",
  "Secure and private downloads"
];

const instructions = [
  { step: 1, text: "Find the PDF link or URL you want to download" },
  { step: 2, text: "Copy the direct PDF URL from your browser" },
  { step: 3, text: "Paste the PDF URL in the input field above" },
  { step: 4, text: "Click 'Download' to fetch the PDF" },
  { step: 5, text: "The PDF will be saved to your device automatically" }
];

const faqs = [
  {
    question: "What types of PDFs can I download?",
    answer: "You can download any publicly accessible PDF from websites, research papers, documents, ebooks, manuals, and more. The PDF must be directly accessible via a URL."
  },
  {
    question: "Is there a file size limit?",
    answer: "No, there are no file size restrictions. You can download small documents or large PDF files equally well."
  },
  {
    question: "Can I download password-protected PDFs?",
    answer: "Only if the PDF is publicly accessible. If a PDF requires a login or password that you don't have, it cannot be downloaded."
  },
  {
    question: "Will the PDF quality be preserved?",
    answer: "Yes, we download the original PDF file without any compression or quality loss. You get the exact same file as hosted on the source website."
  },
  {
    question: "Can I download multiple PDFs at once?",
    answer: "Yes, you can process multiple PDF URLs one after another. Each PDF will be downloaded separately to your device."
  }
];

const relatedTools = ["Scribd", "Academic Papers", "Udemy", "Coursera", "Khan Academy"];
---

<ToolTemplate 
  platform={platform}
  description={description}
  features={features}
  instructions={instructions}
  faqs={faqs}
  relatedTools={relatedTools}
/>
