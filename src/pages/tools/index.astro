// Parse the sitemap and extract tool entries
const lines = sitemapContent.split('\n').slice(1); // Skip header
const tools = lines
  .filter(line => line.startsWith('"tools"'))
  .map(line => {
    const matches = line.match(/"([^"]+)","([^"]+)","([^"]+)"/);
    if (matches) {
      return {
        name: matches[2],
        url: matches[3]
      };
    }
    return null;
  })
  .filter((tool): tool is { name: string; url: string } => tool !== null)
  .filter(tool => tool.url !== '/tools/'); // Remove the main tools page

// Categorize tools
const videoTools = tools.filter(tool => 
  tool.name.toLowerCase().includes('video') || 
  ['YouTube', 'TikTok', 'Instagram', 'Vimeo', 'Twitch', 'Netflix', 'Hulu', 'Amazon Video'].some(platform => 
    tool.name.toLowerCase().includes(platform.toLowerCase())
  )
);

const imageTools = tools.filter(tool => 
  ['Pinterest', 'Getty Images', 'Shutterstock', 'Freepik', 'Adobe Stock', 'Unsplash', 'Pexels', 'Pixabay'].some(platform => 
    tool.name.toLowerCase().includes(platform.toLowerCase())
  )
);

const educationTools = tools.filter(tool => 
  ['Udemy', 'Coursera', 'Khan Academy', 'Skillshare', 'LinkedIn Learning', 'Teachable', 'Moodle'].some(platform => 
    tool.name.toLowerCase().includes(platform.toLowerCase())
  )
);

const otherTools = tools.filter(tool => 
  !videoTools.includes(tool) && !imageTools.includes(tool) && !educationTools.includes(tool)
);
