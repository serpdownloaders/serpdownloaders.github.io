---
import Layout from '../../layouts/Layout.astro';
import VideoEmbed from '../../components/VideoEmbed.astro';

const platform = "Skool Video";
const description = "Download Skool Video content quickly and easily. Free, secure, and no software installation required.";

const features = [
  "Download Skool Video content in high quality",
  "No software installation required - works in your browser",
  "Completely free with no registration needed",
  "Fast download speeds and reliable service",
  "Mobile-friendly interface",
  "Privacy-focused - no data stored",
  "Support for multiple formats",
  "Secure downloads with HTTPS encryption"
];

const instructions = [
  {
    "step": 1,
    "text": "Copy the Skool Video URL from your browser"
  },
  {
    "step": 2,
    "text": "Paste the URL in the input field above"
  },
  {
    "step": 3,
    "text": "Click the 'Download' button"
  },
  {
    "step": 4,
    "text": "Choose your preferred quality and format"
  },
  {
    "step": 5,
    "text": "Your download will start automatically"
  }
];

const faqs = [
  {
    "question": "Is it legal to download Skool Video content?",
    "answer": "Downloading Skool Video content for personal use is generally acceptable, but always respect copyright laws and platform terms of service."
  },
  {
    "question": "Do I need to install any software?",
    "answer": "No! Our Skool Video downloader works entirely in your web browser. No software installation required."
  },
  {
    "question": "Is this service free?",
    "answer": "Yes, our downloader is completely free with no hidden costs or premium features."
  },
  {
    "question": "Is my data safe?",
    "answer": "Yes, we don't store your downloads or personal information. All downloads are processed securely."
  }
];

const relatedTools = [
  "YouTube",
  "TikTok",
  "Instagram",
  "PDF",
  "Twitter"
];
---

<Layout title={`${platform} Downloader - Fast, Free & Secure`} description={description}>
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-4 text-gray-800">{platform} Downloader</h1>
      <p class="text-xl text-center mb-8 text-gray-600">{description}</p>

      <!-- Video Tutorials Section -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Video Tutorials</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <VideoEmbed 
            videoId="tgDmBdReTqA" 
            title="How to Download Videos from Skool.com using wget (2025 Update) - Step by Step Tutorial"
            platform="youtube"
          />
          <VideoEmbed 
            videoId="WRSzeFI_Q7g" 
            title="How to Easily Download SKOOL Videos with a Browser Extension [Chrome Extension]"
            platform="youtube"
          />
        </div>
      </div>

      <!-- Download Form Placeholder -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 mb-8">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Download {platform} Content</h2>
        <div class="flex flex-col md:flex-row gap-4">
          <input 
            type="url" 
            placeholder={`Paste your ${platform} URL here...`}
            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          />
          <button class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            Download
          </button>
        </div>
      </div>

      <!-- Features -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {features.map(feature => (
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Instructions -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">How to Use</h2>
        <div class="space-y-4">
          {instructions.map(instruction => (
            <div class="flex items-start space-x-3">
              <span class="bg-blue-100 text-blue-800 rounded-full w-8 h-8 flex items-center justify-center font-semibold text-sm">
                {instruction.step}
              </span>
              <p class="text-gray-700 pt-1">{instruction.text}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- FAQs -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Frequently Asked Questions</h2>
        <div class="space-y-4">
          {faqs.map(faq => (
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="font-semibold text-gray-800 mb-2">{faq.question}</h3>
              <p class="text-gray-600">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Related Tools -->
      <div>
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Related Downloaders</h2>
        <div class="flex flex-wrap gap-2">
          {relatedTools.map(tool => (
            <a 
              href={`/tools/${tool.toLowerCase().replace(/\s+/g, '-')}-video-downloader`}
              class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full hover:bg-blue-200 transition-colors"
            >
              {tool} Downloader
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>