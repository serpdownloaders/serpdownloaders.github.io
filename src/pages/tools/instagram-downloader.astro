---
import ToolTemplate from '../../layouts/ToolTemplate.astro';

const platform = "Instagram";
const description = "Download Instagram photos, videos, stories, and reels. Save Instagram content in original quality.";

const features = [
  "Download Instagram photos and videos",
  "Save Instagram Stories and Reels",
  "Original quality preservation",
  "No watermarks added",
  "Works with public posts",
  "Batch download support",
  "Mobile and desktop compatible",
  "No Instagram login required"
];

const instructions = [
  {
    "step": 1,
    "text": "Copy the Instagram URL from your browser"
  },
  {
    "step": 2,
    "text": "Paste the URL in the input field above"
  },
  {
    "step": 3,
    "text": "Click the 'Download' button"
  },
  {
    "step": 4,
    "text": "Choose your preferred quality and format"
  },
  {
    "step": 5,
    "text": "Your download will start automatically"
  }
];

const faqs = [
  {
    "question": "Is it legal to download Instagram content?",
    "answer": "Downloading Instagram content for personal use is generally acceptable, but always respect copyright laws and platform terms of service."
  },
  {
    "question": "Do I need to install any software?",
    "answer": "No! Our Instagram downloader works entirely in your web browser. No software installation required."
  },
  {
    "question": "Is this service free?",
    "answer": "Yes, our downloader is completely free with no hidden costs or premium features."
  },
  {
    "question": "Is my data safe?",
    "answer": "Yes, we don't store your downloads or personal information. All downloads are processed securely."
  }
];

const relatedTools = [
  "TikTok",
  "YouTube",
  "Twitter",
  "Facebook",
  "Snapchat"
];
---

<ToolTemplate 
  platform={platform}
  description={description}
  features={features}
  instructions={instructions}
  faqs={faqs}
  relatedTools={relatedTools}
/>